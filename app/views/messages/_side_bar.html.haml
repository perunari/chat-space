.side-bar
  .side-header
    .side-header__text
      %p.side-header__text__name
        = current_user.name
      %ul.side-header__text__menu
        %li.side-header__text__menu__set1
          = link_to new_group_path do
            = icon('fas','edit')
        %li.side-header__text__menu__set2
          = link_to edit_user_path(current_user) do
            = icon('fa','wrench')
  .side-main
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) , class: "group" do
        %p.group__team
          = group.name
        %p.group__message
          = group.show_last_message